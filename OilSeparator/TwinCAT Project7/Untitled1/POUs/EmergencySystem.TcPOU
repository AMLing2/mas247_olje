    <Method Name="AlarmSystem" Id="{56e1c5cb-b349-4390-aac6-4099d16cd53c}">
      <Declaration><![CDATA[METHOD PUBLIC AlarmSystem

VAR_INPUT			// Input variables
	ClearButton : BOOL;
	EmergencyButton : BOOL;
END_VAR

VAR					// Internal (instance) variables
	bIsInitialized : BOOL;
	latch : BOOL := FALSE;
END_VAR]]></Declaration>
      <Implementation>
        <ST><![CDATA[IF NOT bIsInitialized THEN	// Initialization, since functions can't run in top pane
	bIsInitialized := TRUE;
	gAL.fbAlarm.CreateEx(TC_Events.TankAlarmEvent.Emergency, TRUE, 0);
END_IF

IF NOT (EmergencyButton AND NOT latch) THEN
	gAL.fbAlarm.Raise(0); // 0 -> Current time
	latch := TRUE;
END_IF

IF (ClearButton AND gAL.fbAlarm.bRaised) THEN
	gAL.fbAlarm.Clear(0, TRUE);	// .Clear(CurrentTime, ConfirmAlarm)
	latch := FALSE;
END_IF]]></ST>
      </Implementation>
    </Method>
    <Method Name="EmergencyLogic" Id="{209a9a5c-22e1-4953-85b4-acb5c95ad300}">
