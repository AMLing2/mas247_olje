	MotorState : BOOL;
	FV1percent : INT;
	LV1percent : INT;
	LV2percent : INT;
	LV3percent : INT;
END_VAR]]></Declaration>
      <Implementation>
        <ST><![CDATA[	// Button check, inverted
IF NOT EmergencyButton THEN
	MotorState := FALSE;
	FV1percent := 100;
	LV1percent := 100;
	LV2percent := 100;
	LV3percent := 100;
END_IF

